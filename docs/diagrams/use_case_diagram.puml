}
skinparam defaultTextAlignment center
skinparam nodesep 30
skinparam ranksep 40

top to bottom direction

' Actors on left
actor "Admin" as Admin
actor "HR Manager" as HR
actor "Project\nManager" as PM

' Single narrow column of use cases
rectangle "WorkNexus Management System" {
    usecase (Generate\nPayroll) as UC_Payroll
    
    usecase (Calculate\nFixed Salary) as UC_Fixed
    
    usecase (Calculate\nHourly Payment) as UC_Hourly
    
