
@startuml WorkNexus Use Case Diagram 1 - Core Operations

' Title and styling - Black and White
title WorkNexus - Use Case Diagram 1: Core Operations
skinparam monochrome true
skinparam actorStyle awesome
skinparam shadowing false
skinparam usecase {
    BackgroundColor White
    BorderColor Black
    BorderThickness 2
    ArrowColor Black
    ArrowThickness 1.5
    FontSize 11
}
skinparam defaultTextAlignment center
skinparam nodesep 30
skinparam ranksep 40

' Single column of use cases
rectangle "WorkNexus Management System" {
    usecase (User Login) as UC_Login
    usecase (Manage User\nAccounts) as UC_Accounts
    usecase (Manage\nEmployees) as UC_Employees
    usecase (Assign to\nDepartments) as UC_Dept
    usecase (Manage\nProjects) as UC_Projects
    usecase (Assign Team\nto Projects) as UC_Team
    usecase (Manage\nTasks) as UC_Tasks
}

' Actors on left
actor "Admin" as Admin
actor "HR Manager" as HR
actor "Project\nManager" as PM
actor "Employee" as EMP

' Connections
Admin --> UC_Login
Admin --> UC_Accounts

HR --> UC_Login
HR --> UC_Accounts
HR --> UC_Employees
HR --> UC_Dept
PM --> UC_Login
PM --> UC_Projects
PM --> UC_Team
PM --> UC_Tasks

EMP --> UC_Login
EMP --> UC_Tasks

' Relationships
UC_Accounts ..> UC_Login : <<include>>
UC_Team ..> UC_Employees : <<extend>>
@enduml


